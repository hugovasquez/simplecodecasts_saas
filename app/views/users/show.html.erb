<div class='row'>
    <div class='col-md-3' "text-center">
        <%= image_tag @user.profile.avatar.url %>
    </div>
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1></br>
        <div class="well profile-description">
            <h3>Description</h3>
            <%= @user.profile.description %></br>
        </div>
    <div class="well user-info col-md-5">
        <h3>User Info</h3>
        <%= @user.profile.gender %></br>
        <%= @user.profile.weight %></br>
        <%= @user.profile.height %></br>
        <%= @user.profile.age %></br>
        <%= @user.profile.phone_number %></br>
        <%= @user.profile.contact_email %></br>
    </div>    
    </div>
</div>