<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Create Your Profile</h1>
        <p class="text-center">Join the community and fill out your profile!</p>
        <div class="well">
            <%= form_for @profile, url: user_profile_path do |f| %>
                <!--firstname-->
                <div class="form-group">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class: 'form-control' %>
                </div>
                <!--lastname-->
                <div class="form-group">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: 'form-control' %>
                </div>
                <!--gender-->
                <div class="form-group">
                    <%= f.label :gender %>
                    <%= f.select :gender, ['Male', 'Female', 'Other'], {}, class: 'form-control' %>
                </div>
                <!--weight-->
                <div class="form-group">
                    <%= f.label :weight %>
                    <%= f.text_field :weight, class: 'form-control' %>
                </div>
                <!--height-->
                <div class="form-group">
                    <%= f.label :height %>
                    <%= f.text_field :height, class: 'form-control' %>
                </div>
                <!--age-->
                <div class="form-group">
                    <%= f.label :age %>
                    <%= f.text_field :age, class: 'form-control' %>
                </div>
                <!--phonenumber-->
                <div class="form-group">
                    <%= f.label :phone_number %>
                    <%= f.text_field :phone_number, class: 'form-control' %>
                </div>
                <!--contactemail-->
                <div class="form-group">
                    <%= f.label :contact_email %>
                    <%= f.text_field :contact_email, class: 'form-control' %>
                </div>
                <!--description-->
                <div class="form-group">
                    <%= f.label :description %>
                    <%= f.text_area :description, class: 'form-control' %>
                </div>
                <!--submitbutton-->
                <div class="form-group">
                    <%= f.submit "Update Profile", class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div>
    </div>
</div>