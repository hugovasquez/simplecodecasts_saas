<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] == '2' %>
    <h1 class="text-center">Pro Account</h2>
    <% else %>
    <h1 class="text-center">Free Account</h2>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <h2>Sign up</h2>
    
    <% if params[:plan] == '2' %>
      <%= render "pro_form" %>
    <% else %>
      <%= render "basic_form" %>  
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>