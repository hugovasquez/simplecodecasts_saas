<div class="jumbotron text-center">
  <h1><font color="#ffb347">Fitness for Life</font></h1>
  <h3>Feel better about yourself in less then 30 days!</h3>
</div>
<!--Left box -->
<div class="row">
  
  <% if user_signed_in?  %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
    <% if current_user.profile %>
      <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: "btn btn-default btn-lg btn-block btno" %>
      <%= link_to "View your profile", user_path(current_user), class: "btn btn-default btn-lg btn-block btno" %>
    <% else %>
      <%= link_to "Create your profile!", new_user_profile_path(current_user), class: "btn btn-default btn-lg btn-block btno" if current_user %>  
    <% end %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="well">    
        <h2 class="text-center">The Community</h2>
        <%= link_to "Visit the Community", "#", class: "btn btn-default btn-lg btn-block btno" %>
      </div>
    </div>
    
  <% else %>
  
    <div class="col-sm-6">
      <div class="well">    
        <h2 class="text-center">Free Account</h2>
        <h4 class="text-center">Get Started On Your New Lifestyle Today!</h4>
        <br/>
        <%= link_to "Sign Up", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-default btn-lg btn-block btno' %>      
      </div>
    </div>
  <!--Right Box -->  
    <div class="col-sm-6">
      <div class="well">
        <h2 class="text-center">Pro Account</h2>
        <h4 class="text-center">Upgrade to PRO for added benefits</h4>      
        <br/>
        <%= link_to "Sign Up", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-default btn-lg btn-block btno' %>
      </div>
    </div>
  <% end %>
</div>